Stuff to do when upgrading the production server


CREATE TABLE tracks
(   
    track_id    text       NOT NULL,
    conf_id     text       NOT NULL,
    title       text,
    description text
);
CREATE INDEX tracks_idx ON tracks ( track_id, conf_id );
 
alter table talks  add column track_id text;
alter table events add column track_id text;

CREATE TABLE pm_groups
(
    group_id      serial     NOT NULL  PRIMARY KEY,
    xml_group_id  integer,   /* from the perl_mongers.xml file */
    name          text,
    status        text
);
CREATE INDEX pm_groups_idx ON pm_groups ( xml_group_id );
