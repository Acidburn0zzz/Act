#!/usr/bin/perl
use strict;

use Act::Config;
use Act::Util;

my $AGE = 24 * 60 * 60;     # 24 hours, in seconds

# connect to database
Act::Util::db_connect();

# purge old tokens
my $sth = $Request{dbh}->prepare('DELETE FROM twostep WHERE extract(epoch from age(now(), datetime)) > ?');
$sth->execute($AGE);
$Request{dbh}->commit;
