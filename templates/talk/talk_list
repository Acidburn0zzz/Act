          {{lightning}}
        [% ELSE %]
         [% t.duration %] {{minutes}}
        [% END %]
    </td>
    [% IF global.request.user.is_orga OR global.config.talks_show_schedule %]
    <td align="center" nowrap="nowrap">[% IF t.datetime; date_format(t.datetime, 'datetime_short'); ELSE; '&nbsp;'; END %]</td>
    [% END %]
    [% IF global.request.user.is_orga %]
    <td align="center">
    <input type="checkbox" name="[% t.talk_id %]"[% ' checked' IF t.accepted %] />
    </td>
    [% END %]
  </tr>
