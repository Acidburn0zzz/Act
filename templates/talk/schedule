  <th colspan="[% width.$r.$d %]">
    <t><fr>Salle [% global.config.rooms.$r %]</fr>
       <en>[% global.config.rooms.$r %] Room</en>
       <pt>Sala [% global.config.rooms.$r %]</pt>
       <it>Stanza [% global.config.rooms.$r %]</t></th>
  [% END %]
 </tr>
