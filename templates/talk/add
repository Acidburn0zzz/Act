    <input type="checkbox" name="accepted"[% ' checked' IF accepted %] />
    <t><en>accepted</en><fr>accepté</fr></t><br />
    <input type="checkbox" name="confirmed"[% ' checked' IF confirmed %] />
    <t><en>confirmed</en><fr>confirmé</fr></t><br />
    [% ELSE %]
      [% IF accepted %]
        <t><en>Accepted</en><fr>Accepté</fr></t><br />
        <input type="checkbox" name="confirmed"[% ' checked' IF confirmed %] />
        <t><en>confirmed</en><fr>confirmé</fr></t><br />
      [% ELSE %]
