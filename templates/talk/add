   <select name="date">
     <option value=""[% ' selected="selected"' UNLESS datetime %] />
   [% FOREACH d=dates %]
     <option value="[% d.ymd %]"[% ' selected="selected"' IF datetime.ymd == d.ymd %] />[% d.ymd %]
   [% END %]
    </select>
   <t><en>Time</en><fr>Heure</fr></t>
    <input type="text" name="time" value="[% datetime.strftime('%H:%M') %]" size="5" maxlength="5" />
   <t><en>Room</en><fr>Salle</fr></t>
    <select name="room">
    [% FOREACH r=rooms %]
     <option value="[% r %]"[% ' selected="selected"' IF room == r %] />
    [% END %]
    </select>
   </td>
</tr>
[% END %]  
<tr>
  <td align="right"><t><en>Title</en><fr>Titre</fr></t></td>
  <td>&nbsp;</td>
